@model WebApplicationBilling.Models.DTO.CustomerDTO

@{
    ViewData["Title"] = "Create Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 500px;">
        <div class="card-header">
            <h5 class="card-title">Crear un Cliente</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Create" enctype="multipart/form-data">

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName">Nombre</label>
                        <input asp-for="FirstName" class="form-control" placeholder="Ingrese su nombre" />
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName">Apellido</label>
                        <input asp-for="LastName" class="form-control" placeholder="Ingrese su apellido" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="City">Ciudad</label>
                        <input asp-for="City" class="form-control" placeholder="Ingrese su ciudad" />
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Country">País</label>
                        <input asp-for="Country" class="form-control" placeholder="Ingrese su país" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Phone">Teléfono</label>
                        <input asp-for="Phone" class="form-control" placeholder="Ingrese su teléfono" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-success btn-block mt-2">Crear Cliente</button>
                        <a asp-action="Index" class="btn btn-secondary btn-block mt-2">Volver</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
